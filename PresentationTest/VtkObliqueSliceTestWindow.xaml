<Window x:Class="PresentationTest.VtkObliqueSliceTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PresentationTest"
        xmlns:controls="clr-namespace:VtkMvvm.Controls;assembly=VtkMvvm"
        mc:Ignorable="d"
        Title="VtkObliqueSliceTestWindow" Height="800" Width="800">
    <d:Window.DataContext>
        <local:VtkObliqueSliceTestWindowViewModel />
    </d:Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:VtkImageControl x:Name="ObliqueControl"
                                  Grid.Row="0"
                                  SceneObjects="{Binding ImageVms}" />
        <StackPanel Grid.Row="1"
                    Margin="5"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Background="#80000000">
            <TextBlock Margin="0,5,5,0"
                       Text="Slice:"
                       Foreground="White" />
            <Slider Width="200"
                    Minimum="0"
                    Maximum="{Binding Path=ImageVms[0].ImageModel.Extent.MaxZ, Mode=OneWay}"
                    IsSnapToTickEnabled="True"
                    Value="{Binding ObliqueSliceIndex, Mode=TwoWay}" />

            <TextBlock Margin="0,5,5,0"
                       Text="Slice Index:"
                       Foreground="White" />
            <TextBlock Margin="0,5,5,0"
                       Text="{Binding ObliqueSliceIndex}"
                       Foreground="White" />
            <TextBlock Margin="0,5,5,0"
                       Text="Max:"
                       Foreground="White" />
            <TextBlock Margin="0,5,5,0"
                       Text="{Binding Path=ImageVms[0].ImageModel.Extent.MaxZ, Mode=OneWay}"
                       Foreground="White" />
        </StackPanel>
    </Grid>
</Window>