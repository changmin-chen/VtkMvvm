<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <UseWindowsForms>true</UseWindowsForms>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Configurations>Debug;Release</Configurations>
        <Platforms>x64</Platforms>

        <!-- Package identity -->
        <PackageId>VtkMvvm</PackageId>
        <Version>1.2.7</Version>
        <Authors>ChangMin</Authors>
        <Title>VtkMvvm</Title>
        <Description>
            VtkMvvm is designed to simplify the development of WPF applications using
            VTK (Visualization Toolkit) through ActiViz.NET by providing a
            structured MVVM architecture.
        </Description>
        <PackageTags>vtk;mvvm;imaging</PackageTags>

        <!-- Licensing & metadata -->
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/changmin-chen/VtkMvvm</PackageProjectUrl>
        <RepositoryUrl>https://github.com/changmin-chen/VtkMvvm.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Activiz.NET.x64" Version="5.8.0"/>
        <PackageReference Include="System.Reactive" Version="6.0.1"/>
    </ItemGroup>


</Project>
